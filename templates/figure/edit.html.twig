{% extends 'base.html.twig' %}

{% block title %}Edit {{ figure.name }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/trick.css') }}">
{% endblock %}

{% block main %}
    <article id="trickForm">
        <div class="row justify-content-center">
            <div class="col-12">
                <img src="{{ asset('assets/images/card-default.jpg') }}" alt="default" class="img-fluid mx-auto d-block">
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-12">
                <h3 class="text-center">Pictures & Videos</h3>
                <div id="picturesAndVideos">
                    <p class="text-center">Add your pictures or videos to illustrate this trick.</p>
                </div>
            </div>
        </div>
        <div class="row justify-content-center pictures-block">
            <div class="col-12 col-lg-5">
                <div class="form-group">
                    <input type="file" name="file" id="file" />
                    <br />
                    <span id="uploaded_image"></span>
                </div>
            </div>
            <div class="col-12 col-lg-5 offset-lg-1 videos-block">
                <button type="button" class="btn add_video_link"><i class="fas fa-plus"></i> Add a video</button>
            </div>
        </div>
        {{ form_start(form) }}
        <div class="row">
            <div class="col-12">
                <h3 class="text-center">About this trick</h3>
                <div class="row justify-content-center">
                    <div class="col-12 col-lg-5">
                        <p>Name</p>
                    </div>
                    <div class="col-12 col-lg-5 offset-lg-1">
                        <p>Category</p>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-12 col-lg-5">
                        {{ form_widget(form.name) }}
                    </div>
                    <div class="col-12 col-lg-5 offset-lg-1">
                        {{ form_widget(form.category) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-11">
                <h3 class="text-center">Describe it</h3>
                <p>{{ form_widget(form.description) }}</p>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="d-flex col-10">
                <div class="mr-auto p-2">
                    <a href="{{ path('figure_index') }}" class="btn btn-dark">Cancel</a>
                </div>
                <div class="p-2">
                    <button class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </article>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/js/upload.js') }}"></script>
{% endblock %}
