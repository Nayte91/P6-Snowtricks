{% extends 'base.html.twig' %}

{% block title %}Edit {{ figure.name }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
{% endblock %}

{% block main %}
    <article id="trickForm">
        <div class="row justify-content-center">
            <div class="col-12" id="displayPicture">
                <img src="{{ asset('assets/images/card-default.jpg') }}" alt="default" class="img-fluid mx-auto d-block">
            </div>
            <div style="position: absolute; top: 50%;">
                <h1 class="font-weight-bold" style="color:red;">{{ figure.name }}</h1>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-12">
                <h3>Pictures & Videos</h3>
                <div id="picturesAndVideos"></div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="row justify-content-center">
                    <div class="col-12 col-lg-5">
                        <h4>Upload new picture</h4>
                        {{ include('figure/_pictureform.html.twig') }}
                        <p id="uploaded_image"></p>
                    </div>
                    <div class="col-12 col-lg-5 offset-lg-1">
                        <h4>Send new video</h4>
                        {{ include('figure/_videoform.html.twig') }}
                        <p id="video_sent"></p>
                    </div>
                </div>
            </div>
        </div>
        {{ form_start(form) }}
            <div class="row justify-content-center my-3">
                <div class="col-11">
                    <h3 class="text-center mb-3">Describe it</h3>
                    {{ form_widget(form.description) | raw }}
                </div>
            </div>
            <div class="row my-3">
                <div class="col-12">
                    <h3 class="text-center">About this trick</h3>
                    <div class="row justify-content-center">
                        <div class="col-12 col-lg-3">
                            <p>Name</p>
                        </div>
                        <div class="col-12 col-lg-3">
                            <p>Category</p>
                        </div>
                        <div class="col-12 col-lg-3">
                            Creation date
                        </div>
                        <div class="col-12 col-lg-3">
                            Last modification date
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-12 col-lg-3">
                            {{ form_widget(form.name) }}
                        </div>
                        <div class="col-12 col-lg-3">
                            {{ form_widget(form.category) }}
                        </div>
                        <div class="col-12 col-lg-3">
                            {{ figure.createdAt|date("m/d/Y") }}
                        </div>
                        <div class="col-12 col-lg-3">
                            {{ figure.lastModified|date("m/d/Y") }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="d-flex col-10">
                    <div class="mr-auto p-2">
                        <a href="{{ path('figure_index') }}" class="btn btn-dark">Cancel</a>
                    </div>
                    <div class="p-2">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div>
        {{ form_end(form) }}
    </article>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.ckeditor.com/ckeditor5/21.0.0/classic/ckeditor.js"></script>
    <script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
    <script>
        var figureSlug = "{{ figure.slug }}";
        var defaultPicture = "{{ asset('assets/images/card-default.jpg') }}";
    </script>
    <script src="{{ asset('assets/js/edit.js') }}"></script>
    <script src="{{ asset('assets/js/medias.js') }}"></script>
{% endblock %}
