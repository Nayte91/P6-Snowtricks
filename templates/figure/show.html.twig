{% extends 'figure/display_template.html.twig' %}

{% block title %}{{ figure.name }}{% endblock %}

{% block header_edition %}
    <a href="{{ path('figure_edit', {'id': figure.id}) }}" style="color: black;"><i class="fas fa-pencil-alt"></i></a>
    <a href="#" class="pl-3" style="color: black;"><i class="fas fa-trash-alt"></i></a>
{% endblock %}

{% block name %}{% endblock %}

{% block picture_edition %}{% endblock %}

{% block video_edition %}{% endblock %}

{% block figure_category %}
    {{ figure.category }}
{% endblock %}

{% block figure_createdAt %}
    {{ figure.createdAt|date("m/d/Y") }}
{% endblock %}

{% block figure_lastModified %}
    {{ figure.lastModified|date("m/d/Y") }}
{% endblock %}

{% block figure_name %}
    {{ figure.name }}
{% endblock %}

{% block figure_description %}
    {{ figure.description }}
{% endblock %}

{% block buttons %}{% endblock %}