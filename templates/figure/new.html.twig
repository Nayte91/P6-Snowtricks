{% extends 'base.html.twig' %}

{% block title %}New trick{% endblock %}

{% block main %}
    <article class="container">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-12">
                    <img src="{{ asset('assets/images/card-default.jpg') }}" alt="default" class="img-responsive text-center">
                </div>

                <div class="col-12">
                    <h3 class="text-center">Pictures & Videos</h3>
                    <div class="row">
                        <div class="col-12">
                            <p>
                                Add your pictures or videos to illustrate this trick.
                                <button type="button" class="btn btn-outline-success add_picture_link"><i class="fas fa-plus"></i>New image<i class="fas fa-image"></i></button>
                                <button type="button" class="btn btn-outline-success add_picture_link"><i class="fas fa-plus"></i>New video<i class="fas fa-image"></i></button>
                            </p>
                            {{ form_row(form.url) }}
                        </div>
                    </div>

                    <div class="" data-prototype="{{ form_widget(form.pictures.vars.prototype)|e('html_attr') }}">
                    </div>
                </div>

                <div class="col-sm-8">
                    <h3 class="text-center">About this trick</h3>
                    <table class="table">
                        <thead class="thead-dark">
                            <tr>
                                <th class="text-center">Name</th>
                                <th class="text-center">Category</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="text-center"> {{ form_widget(form.name) }}</td>
                                <td class="text-center"> {{ form_widget(form.category) }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="col-10">
                    <h3 class="text-center">Description de la figure</h3>
                    <div class="border border-dark">
                       {{ form_widget(form.description) }}
                    </div>
                </div>

                <div>{{ form_widget(form.pictures) }}</div>

                <div class="d-flex col-10">
                    <div class="mr-auto p-2">
                        <a href="{{ path('figure_index') }}" class="btn btn-dark">Annuler</a>
                    </div>
                    <div class="p-2">
                        <button class="btn btn-success">Sauvegarder</button>
                    </div>

                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </article>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/js/figure_form.js') }}"></script>
{% endblock %}
